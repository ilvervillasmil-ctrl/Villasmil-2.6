from villasmil_omega.core import mc_global


def test_mc_global_varios_casos():
    # Tres MC locales: 0.8, 1.0 y 0.6 -> promedio = 0.8
    assert mc_global([0.8, 1.0, 0.6]) == 0.8

    # Un solo valor: debe devolver el mismo
    assert mc_global([0.9]) == 0.9

    # Lista vacÃ­a: borde -> 0.0
    assert mc_global([]) == 0.0
